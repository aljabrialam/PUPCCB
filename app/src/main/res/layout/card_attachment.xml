<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_attachment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="4dp"
    android:layout_marginTop="@dimen/pad_5dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:background="@color/background_tab_pressed">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginRight="10dp"
                android:layout_gravity="left">

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="right">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginRight="10dp">

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/share"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:padding="@dimen/pad_5dp"
                        android:src="@drawable/ic_action_cancel"
                        android:background="@drawable/social_button_selector"/>

                </LinearLayout>
            </LinearLayout>
        </FrameLayout>

        <LinearLayout
            android:layout_width="409dp"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:layout_gravity="left"
            >



            <ImageView
                android:layout_margin="@dimen/pad_5dp"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/icon"
                android:scaleType="centerCrop"/>

            <LinearLayout
                android:layout_width="409dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="left"
                >
            <TextView
                android:layout_marginTop="@dimen/pad_5dp"
                android:layout_marginRight="@dimen/pad_5dp"
                android:id="@+id/filename"
                android:layout_width="290dp"
                android:layout_height="40dp"
                android:padding="@dimen/pad_5dp"
                android:text="File Name"
                />
            <TextView
                android:layout_marginRight="@dimen/pad_5dp"
                android:id="@+id/filesize"
                android:layout_width="290dp"
                android:layout_height="40dp"
                android:padding="@dimen/pad_5dp"
                android:text="File Size"
                />

            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</android.support.v7.widget.CardView>
