<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/myPrimaryColor</item>
        <item name="colorPrimaryDark">@color/myPrimaryDarkColor</item>
        <item name="colorAccent">@color/myAccentColor</item>


        <item name="android:textColorPrimary">@color/myTextPrimaryColor</item>
        <item name="android:navigationBarColor">@color/myNavigationColor</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>


        <item name="android:windowBackground">@color/myWindowBackground</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="ToolBarStyle" parent="">
        <item name="android:elevation">@dimen/toolbar_elevation</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="button">
        <item name="android:layout_margin">10dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="editext_graybg" parent="@android:style/Widget.EditText">
        <item name="android:textSize">@dimen/txt_14sp</item>
        <item name="android:background">@drawable/button_use_light_gray</item>
        <item name="android:paddingLeft">@dimen/pad_10dp</item>
        <item name="android:paddingRight">@dimen/pad_10dp</item>
        <item name="android:ems">10</item>
        <item name="android:drawablePadding">@dimen/pad_10dp</item>
    </style>

    <style name="btn_white_large" parent="@style/btn">
        <item name="android:textSize">@dimen/txt_16sp</item>
        <item name="android:textColor">@color/myPrimaryColor</item>v
        <item name="android:background">@drawable/button_use_dark_gray</item>
    </style>

    <style name="btn_black_header" parent="@style/btn">
        <item name="android:textSize">@dimen/txt_16sp</item>
        <item name="android:textColor">@color/myPrimaryColor</item>v
        <item name="android:background">@drawable/button_use_dark_gray</item>
    </style>

    <style name="btn_add_attachment" parent="@style/btn">
        <item name="android:textSize">@dimen/txt_12sp</item>
        <item name="android:textColor">@color/myPrimaryColor</item>v
        <item name="android:background">@drawable/button_use_dark_gray</item>
    </style>

    <style name="btn" parent="@android:style/Widget.Holo.Light.Button">
        <item name="android:minWidth">1.0dip</item>
        <item name="android:minHeight">1.0dip</item>
    </style>

    <style name="editext_white" parent="@android:style/Widget.Holo.Light.EditText">
        <item name="android:textSize">@dimen/txt_14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/white</item>
        <item name="android:paddingTop">@dimen/pad_10dp</item>
        <item name="android:paddingBottom">@dimen/pad_10dp</item>
        <item name="android:inputType">textEmailAddress</item>
    </style>

    <style name="btn_green_white_bg" parent="@style/btn">
        <item name="android:textSize">@dimen/txt_16sp</item>
        <item name="android:textColor">@color/main_color_green</item>
        <item name="android:background">@color/white</item>
        <item name="android:paddingTop">@dimen/pad_10dp</item>
        <item name="android:paddingRight">@dimen/pad_15dp</item>
        <item name="android:paddingBottom">@dimen/pad_10dp</item>
    </style>


    <style name="TextAppearance.MaterialSheetFab.Note" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_white_87</item>
        <item name="android:textSize">@dimen/note_textsize</item>
    </style>

    <style name="TextAppearance.MaterialSheetFab.Note.Title" parent="TextAppearance.MaterialSheetFab.Note">
        <item name="android:textSize">@dimen/note_title_textsize</item>
    </style>

    <style name="Widget.MaterialSheetFab.Note" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/note_spacing</item>
        <item name="android:foreground">?selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="contentPadding">@dimen/note_content_spacing</item>
        <item name="cardBackgroundColor">@color/background_card</item>
        <item name="cardCornerRadius">@dimen/note_corner_radius</item>
    </style>

    <style name="Widget.MaterialSheetFab.Ticket" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/note_spacing</item>
        <item name="android:foreground">?selectableItemBackground</item>
        <item name="android:clickable">true</item>

        <item name="cardBackgroundColor">@color/background_card</item>
        <item name="cardCornerRadius">@dimen/note_corner_radius</item>
    </style>

    <style name="Widget.MaterialSheetFab.Note.List" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingTop">@dimen/note_spacing</item>
        <item name="android:paddingLeft">@dimen/note_spacing</item>
        <item name="android:paddingRight">@dimen/note_spacing</item>
        <item name="android:paddingBottom">@dimen/fab_list_spacing</item>
        <item name="android:clipToPadding">false</item>
    </style>

    <style name="FabEditStyle">
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_margin">@dimen/spacing_large</item>
        <item name="android:padding">@dimen/spacing_large</item>
        <item name="android:background">@drawable/fab_background</item>
        <item name="android:src">@drawable/fab_add</item>
        <item name="android:outlineProvider">background</item>
        <item name="android:stateListAnimator">@anim/fab_elevation</item>
        <item name="borderWidth">0dp</item>
    </style>
    <style name="Widget.MaterialSheetFab.TabLayout" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:theme">@style/ThemeOverlay.MaterialSheetFab.ActionBar</item>
        <item name="android:elevation">@dimen/toolbar_elevation</item>
        <item name="tabMode">fixed</item>
        <item name="tabGravity">fill</item>
    </style>

    <style name="ThemeOverlay.MaterialSheetFab.ActionBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">#242424</item>
        <item name="colorControlNormal">@color/myPrimaryColor</item>
        <item name="colorControlHighlight">#8fff</item>
        <item name="colorControlActivated">#8fff</item>
    </style>


    <style name="TEXT.SMALL" parent="">
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:textSize">@dimen/TEXT_SIZE_SMALL_MEDIUM</item>
    </style>
    <style name="TEXT.MEDIUM" parent="">
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:textSize">@dimen/TEXT_SIZE_MEDIUM</item>
    </style>

    <style name="menu_labels_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="button_inner_tab">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/myPrimaryDarkColor</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="label_main_layout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/txt_12sp</item>
        <item name="android:textColor">@color/myPrimaryColor</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>


    <style name="text_input_main_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/txt_12sp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>

</resources>
